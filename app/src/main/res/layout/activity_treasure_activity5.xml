<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hintergrund"
    tools:context="voluda.treasurehuntkali.TreasureActivity5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nehmen Sie ein Foto des Förderturms des ehemaligen Bergwerk West auf!"
        android:id="@+id/textView9"
        android:lineSpacingExtra="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:background="@drawable/button_narrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:id="@+id/button26"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="133dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_below="@+id/button26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:background="@drawable/button_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karte"
        android:id="@+id/button27"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/button_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:id="@+id/button28"
        android:layout_alignBottom="@+id/button27"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />
</RelativeLayout>
